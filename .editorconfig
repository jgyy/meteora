# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Rust files
[*.rs]
indent_size = 4

# Cargo files
[Cargo.toml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
